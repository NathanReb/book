(rule
 (target README.md.corrected)
 (deps
  (package mdx)
  (package core)
  (package ppx_jane)
  examples/abs_diff.mli
  examples/htable_sig1.ml
  examples/htable_sig2.ml
  examples/numerical_deriv_alt_sig.mli
  examples/substring_sig1.ml
  examples/substring_sig2.ml)
 (locks ../../global-lock)
 (action
   (run ocaml-mdx test
    --prelude=%{dep:prelude.ml}
    --output %{target}
    --direction=to-md
    %{dep:README.md})))

(alias
 (name runtest)
 (action (diff README.md README.md.corrected)))

(data_only_dirs examples)
