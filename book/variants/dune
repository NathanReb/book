(rule
 (target README.md.corrected)
 (deps
  (package mdx)
  (package core)
  (package ppx_jane)
  examples/variants-termcol-annotated/terminal_color.ml
  examples/variants-termcol-fixed/terminal_color.ml
  examples/variants-termcol/terminal_color.ml
  examples/variants-termcol/terminal_color.mli
  (source_tree examples/variants-termcol-annotated))
 (locks ../../global-lock)
 (action
  (run ocaml-mdx test
   --prelude=%{dep:prelude.ml}
   --prelude=catch_all:%{dep:catch_all.ml}
   --prelude=logger:%{dep:logger.ml}
   --output %{target}
   --direction=to-md
   %{dep:README.md})))

(alias
 (name runtest)
 (action (diff README.md README.md.corrected)))

(data_only_dirs examples)
